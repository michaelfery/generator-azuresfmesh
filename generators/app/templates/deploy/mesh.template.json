{
    "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "location": {
        "type": "string",
        "metadata": {
          "description": "Location of the resources."
        }
      }
    },
    "resources": [
      {
        "apiVersion": "2018-07-01-preview",
        "name": "<%= appName %>Network",
        "type": "Microsoft.ServiceFabricMesh/networks",
        "location": "[parameters('location')]",
        "dependsOn": [],
        "properties": {
          "addressPrefix": "10.0.0.4/22",
          "ingressConfig": {
            "layer4": [
              {
                "name": "<%= serviceName %>Ingress",
                "publicPort": "<%= portMapHost %>",
                "applicationName": "<%= appName %>",
                "serviceName": "<%= serviceName %>",
                "endpointName": "<%= serviceName %>Listener"
              }
            ]
          }
        }
      },
      {
        "apiVersion": "2018-07-01-preview",
        "name": "<%= appName %>",
        "type": "Microsoft.ServiceFabricMesh/applications",
        "location": "[parameters('location')]",
        "dependsOn": [
          "Microsoft.ServiceFabricMesh/networks/<%= appName %>Network"
        ],
        "properties": {
          "description": "Service Fabric Mesh <%= appName %> Application!",
          "services": [
            {
              "type": "Microsoft.ServiceFabricMesh/services",
              "location": "[parameters('location')]",
              "name": "<%= serviceName %>",
              "properties": {
                "description": "Service Fabric Mesh <%= serviceName %> Application!",
                "osType": "<%= osType %>",
                "codePackages": [
                  {
                    "name": "<%= serviceName %>Code",
                    "image": "<%= imageName %>",
                    "endpoints": [
                      {
                        "name": "<%= serviceName %>Listener",
                        "port": "<%= portMapContainer %>"
                      }
                    ],
                    "resources": {
                      "requests": {
                        "cpu": "1",
                        "memoryInGB": "1"
                      }
                    }
                  }
                ],
                "replicaCount": "1",
                "networkRefs": [
                  {
                    "name": "[resourceId('Microsoft.ServiceFabricMesh/networks', '<%= appName %>Network')]"
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  }